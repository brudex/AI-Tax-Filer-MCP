{
  "name": "gra-tax-processor",
  "version": "1.0.0",
  "description": "Tax document processing system for Ghana Revenue Authority",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' nodemon --exec ts-node --project tsconfig.node.json src/server.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "mcp": "npx tsx src/mcp-simple.ts",
    "mcp:debug": "npx tsx --inspect src/mcp-simple.ts",
    "web-api": "npm run build && node dist/web-api-server.js",
    "web-api:dev": "NODE_OPTIONS='--loader ts-node/esm' nodemon --exec ts-node --project tsconfig.node.json src/web-api-server.ts"
  },
  "keywords": [
    "mcp",
    "tax",
    "pdf",
    "ghana",
    "gra",
    "document-processing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.9",
    "@huggingface/inference": "^2.6.4",
    "@langchain/community": "^0.3.45",
    "@langchain/core": "^0.3.57",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "better-sqlite3": "^11.10.0",
    "chromadb": "^3.0.3",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "langchain": "^0.3.27",
    "mammoth": "^1.6.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.14.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/csv-parse": "^1.1.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/pdf-parse": "^1.1.4",
    "@types/pdfkit": "^0.12.12",
    "@types/uuid": "^9.0.8",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
